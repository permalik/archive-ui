---
import Layout from "../components/Layout.astro";
import { books } from "../data/books.js";
---

<Layout>
    <h1>Books</h1>
    <ul>
        {
            books.map((book: any) => (
                <li class="topic">
                    <h2>{book.topic}</h2>
                    <ul>
                        {book.titles.map((title: any) => (
                            <li class="title">{title}</li>
                        ))}
                    </ul>
                </li>
            ))
        }
    </ul>
</Layout>

<style>
    .topic {
        margin: 0 0 1rem 0;
        & > h2 {
            margin: 0 0 0.25rem 0;
            color: var(--pri);
        }
    }
</style>
